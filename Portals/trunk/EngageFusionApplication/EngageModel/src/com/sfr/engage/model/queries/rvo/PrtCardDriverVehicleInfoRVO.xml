<ViewObject
  xmlns="http://xmlns.oracle.com/bc4j"
  Name="PrtCardDriverVehicleInfoRVO"
  Version="11.1.1.61.92"
  InheritPersonalization="true"
  BindingStyle="OracleName"
  CustomQuery="true"
  PageIterMode="Full"
  UseGlueCode="false"
  RowClass="com.sfr.engage.model.queries.rvo.PrtCardDriverVehicleInfoRVORowImpl"
  ComponentClass="com.sfr.engage.model.queries.rvo.PrtCardDriverVehicleInfoRVOImpl">
  <DesignTime>
    <Attr Name="_isExpertMode" Value="true"/>
    <Attr Name="_codeGenFlag2" Value="Access|Coll|Prog|VarAccess"/>
    <Attr Name="_isCodegen" Value="true"/>
  </DesignTime>
  <Properties>
    <SchemaBasedProperties>
      <LABEL
        ResId="com.sfr.engage.model.queries.rvo.PrtCardDriverVehicleInfoRVO_LABEL"/>
    </SchemaBasedProperties>
  </Properties>
  <Variable
    Name="accountValue"
    Kind="where"
    Type="java.lang.String"/>
  <Variable
    Name="countryCd"
    Kind="where"
    Type="java.lang.String"/>
  <Variable
    Name="paramValue"
    Kind="where"
    Type="java.lang.String"/>
  <SQLQuery>
    <![CDATA[SELECT PDI.DRIVER_NAME || '-' || DECODE(PC.CARD_EMBOSS_NUM,NULL,PDI.REFERENCE_NUMBER,PC.CARD_EMBOSS_NUM) AS DRIVER_NAME
      ,null as VEHICLE_NUMBER
      ,PC.PRT_CARD_PK
      ,PDI.REFERENCE_NUMBER
FROM PRT_DRIVER_INFORMATION PDI
LEFT JOIN PRT_CARD PC
ON    (PDI.CARD_NUMBER        = PC.PRT_CARD_PK
AND    PDI.ACCOUNT_NUMBER     = PC.ACCOUNT_ID
AND    PDI.COUNTRY_CODE       = PC.COUNTRY_CODE)
WHERE  PDI.COUNTRY_CODE       = :countryCd
--AND   PC.PARTNER_ID         = :partnerValue
AND   'Driver'                = :paramValue
AND   INSTR(:accountValue,PDI.ACCOUNT_NUMBER)<>0

UNION


SELECT null as DRIVER_NAME 
      ,PTI.VEHICLE_NUMBER || '-' || DECODE(PC.CARD_EMBOSS_NUM,NULL,PTI.REFERENCE_NUMBER,PC.CARD_EMBOSS_NUM) AS VEHICLE_NUMBER
      ,PC.PRT_CARD_PK
      ,PTI.REFERENCE_NUMBER
FROM PRT_TRUCK_INFORMATION PTI
LEFT JOIN PRT_CARD PC
ON    (PTI.CARD_NUMBER        = PC.PRT_CARD_PK
AND    PTI.ACCOUNT_NUMBER     = PC.ACCOUNT_ID
AND    PTI.COUNTRY_CODE       = PC.COUNTRY_CODE)
WHERE PTI.COUNTRY_CODE         = :countryCd
--AND   PC.PARTNER_ID            = :partnerValue
AND   'Vehicle'                = :paramValue
AND   INSTR(:accountValue,PTI.ACCOUNT_NUMBER)<>0]]>
  </SQLQuery>
  <ViewAttribute
    Name="DriverName"
    IsUpdateable="false"
    IsPersistent="false"
    PrecisionRule="true"
    Type="java.lang.String"
    ColumnType="CHAR"
    AliasName="DRIVER_NAME"
    Expression="DRIVER_NAME"
    SQLType="VARCHAR">
    <DesignTime>
      <Attr Name="_DisplaySize" Value="30"/>
    </DesignTime>
  </ViewAttribute>
  <ViewAttribute
    Name="VehicleNumber"
    IsUpdateable="false"
    IsPersistent="false"
    PrecisionRule="true"
    Precision="20"
    Type="java.lang.String"
    ColumnType="VARCHAR2"
    AliasName="VEHICLE_NUMBER"
    Expression="VEHICLE_NUMBER"
    SQLType="VARCHAR">
    <DesignTime>
      <Attr Name="_DisplaySize" Value="20"/>
    </DesignTime>
  </ViewAttribute>
  <ViewAttribute
    Name="PrtCardPk"
    IsUpdateable="false"
    IsPersistent="false"
    PrecisionRule="true"
    Precision="10"
    Type="java.lang.String"
    ColumnType="VARCHAR2"
    AliasName="PRT_CARD_PK"
    Expression="PRT_CARD_PK"
    SQLType="VARCHAR">
    <DesignTime>
      <Attr Name="_DisplaySize" Value="10"/>
    </DesignTime>
  </ViewAttribute>
  <ViewAttribute
    Name="ReferenceNumber"
    IsUpdateable="false"
    IsPersistent="false"
    PrecisionRule="true"
    Precision="10"
    Type="java.lang.String"
    ColumnType="VARCHAR2"
    AliasName="REFERENCE_NUMBER"
    Expression="REFERENCE_NUMBER"
    SQLType="VARCHAR">
    <DesignTime>
      <Attr Name="_DisplaySize" Value="10"/>
    </DesignTime>
  </ViewAttribute>
  <ResourceBundle>
    <PropertiesBundle
      PropertiesFile="com.sfr.engage.model.EngageModelBundle"/>
  </ResourceBundle>
</ViewObject>
