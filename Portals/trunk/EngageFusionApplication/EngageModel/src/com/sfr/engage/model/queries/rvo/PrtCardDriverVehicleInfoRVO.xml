<ViewObject
  xmlns="http://xmlns.oracle.com/bc4j"
  Name="PrtCardDriverVehicleInfoRVO"
  Version="11.1.1.61.92"
  InheritPersonalization="true"
  BindingStyle="OracleName"
  CustomQuery="true"
  PageIterMode="Full"
  UseGlueCode="false"
  RowClass="com.sfr.engage.model.queries.rvo.PrtCardDriverVehicleInfoRVORowImpl"
  ComponentClass="com.sfr.engage.model.queries.rvo.PrtCardDriverVehicleInfoRVOImpl">
  <DesignTime>
    <Attr Name="_isExpertMode" Value="true"/>
    <Attr Name="_codeGenFlag2" Value="Access|Coll|Prog|VarAccess"/>
    <Attr Name="_isCodegen" Value="true"/>
  </DesignTime>
  <Properties>
    <SchemaBasedProperties>
      <LABEL
        ResId="com.sfr.engage.model.queries.rvo.PrtCardDriverVehicleInfoRVO_LABEL"/>
    </SchemaBasedProperties>
  </Properties>
  <Variable
    Name="accountValue"
    Kind="where"
    Type="java.lang.String"/>
  <Variable
    Name="countryCd"
    Kind="where"
    Type="java.lang.String"/>
  <Variable
    Name="partnerValue"
    Kind="where"
    Type="java.lang.String"/>
  <Variable
    Name="paramValue"
    Kind="where"
    Type="java.lang.String"/>
  <SQLQuery>
    <![CDATA[SELECT PDI.DRIVER_NAME || '-' || PC.CARD_EMBOSS_NUM AS DRIVER_NAME
       ,null as VEHICLE_NUMBER
      ,PC.PRT_CARD_PK
FROM PRT_CARD PC
    ,PRT_DRIVER_INFORMATION PDI
WHERE PC.ACCOUNT_ID          = trim(PDI.ACCOUNT_NUMBER)
AND   PC.COUNTRY_CODE        = PDI.COUNTRY_CODE
AND   PC.PRT_CARD_PK        = PDI.CARD_NUMBER
AND   INSTR(:accountValue,PDI.ACCOUNT_NUMBER)<>0
AND   PDI.COUNTRY_CODE       = :countryCd
AND   PC.PARTNER_ID          = :partnerValue
AND   'Driver'               = :paramValue

UNION

SELECT null as DRIVER_NAME 
      ,PTI.VEHICLE_NUMBER || '-' || PC.CARD_EMBOSS_NUM AS VEHICLE_NUMBER
      ,PC.PRT_CARD_PK
FROM PRT_CARD PC
    ,PRT_TRUCK_INFORMATION PTI
WHERE PC.ACCOUNT_ID            = trim(PTI.ACCOUNT_NUMBER)
AND   PC.COUNTRY_CODE          = PTI.COUNTRY_CODE
AND   PC.PRT_CARD_PK          = PTI.CARD_NUMBER
AND   INSTR(:accountValue,PTI.ACCOUNT_NUMBER)<>0
AND   PTI.COUNTRY_CODE         = :countryCd
AND   PC.PARTNER_ID            = :partnerValue
AND   'Vehicle'                = :paramValue]]>
  </SQLQuery>
  <ViewAttribute
    Name="DriverName"
    IsUpdateable="false"
    IsPersistent="false"
    PrecisionRule="true"
    Type="java.lang.String"
    ColumnType="CHAR"
    AliasName="DRIVER_NAME"
    Expression="DRIVER_NAME"
    SQLType="VARCHAR">
    <DesignTime>
      <Attr Name="_DisplaySize" Value="30"/>
    </DesignTime>
  </ViewAttribute>
  <ViewAttribute
    Name="VehicleNumber"
    IsUpdateable="false"
    IsPersistent="false"
    PrecisionRule="true"
    Precision="20"
    Type="java.lang.String"
    ColumnType="VARCHAR2"
    AliasName="VEHICLE_NUMBER"
    Expression="VEHICLE_NUMBER"
    SQLType="VARCHAR">
    <DesignTime>
      <Attr Name="_DisplaySize" Value="20"/>
    </DesignTime>
  </ViewAttribute>
  <ViewAttribute
    Name="PrtCardPk"
    IsUpdateable="false"
    IsPersistent="false"
    PrecisionRule="true"
    Precision="10"
    Type="java.lang.String"
    ColumnType="VARCHAR2"
    AliasName="PRT_CARD_PK"
    Expression="PRT_CARD_PK"
    SQLType="VARCHAR">
    <DesignTime>
      <Attr Name="_DisplaySize" Value="10"/>
    </DesignTime>
  </ViewAttribute>
  <ResourceBundle>
    <PropertiesBundle
      PropertiesFile="com.sfr.engage.model.EngageModelBundle"/>
  </ResourceBundle>
</ViewObject>
